@using Personalblog.Utils
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Personalblog.Model.ViewModels.MessageBoard.MsgBoardList
@{
    ViewData["Title"] = "留言板";
}
@section head
{
