<div class="card">
    <div class="img-grid">
        <img class="bd-placeholder-img card-img-top" src="/media/@Model.YPath" alt="">
    </div>
    <div class="card-body">
        <h5 class="card-title">
            <a class="stretched-link" asp-controller="Photo" asp-action="Details" asp-route-id="@Model.Id">
                @Model.Title
            </a>
        </h5>
        <div class="card-text d-flex justify-content-between">
            <span>@Model.Location</span>
            <span>
                @Model.CreateTime.ToShortDateString()
                @Model.CreateTime.ToShortTimeString()
            </span>
        </div>
    </div>
</div>