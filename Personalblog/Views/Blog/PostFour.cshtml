    <script>
  (function() {
    document.addEventListener("DOMContentLoaded", function() {
      // 遍历所有 Markdown 代码块
      const codeBlocks = document.querySelectorAll('.post-content pre code');
      codeBlocks.forEach((codeBlock, index) => {
        const code = codeBlock.textContent.replace(/`/g, '&#96;');
        const lang = codeBlock.getAttribute('class');
        const langName = lang ? lang.replace('language-', '') : 'unknown'; // 提取语言名称
        const highlightedCode = hljs.highlightAuto(code, [lang]).value;
  
      
    // 生成可复制的代码块
    const langLabelHtml = `<span class="language-label">${langName}</span>`;
    const codeBlockHtml = `<pre class="highlight"><div class="zy-knowledge">${langLabelHtml}</div><code class="hljs ${lang}">${highlightedCode}</code></pre>`;
    const copyBtnHtml = `<button class="copy-btn" data-clipboard-target="#code-block-${index}"><i class="fa fa-copy"></i></button>`;
    const codeBlockWrapper = `<div class="code-block" id="code-block-${index}">${codeBlockHtml}${copyBtnHtml}</div>`;
    
    // 替换 Markdown 代码块
    codeBlock.parentElement.insertAdjacentHTML('beforebegin', codeBlockWrapper);
    codeBlock.parentElement.remove();

     // 初始化 clipboard.js
     const clipboard = new ClipboardJS('.copy-btn');
          // 添加复制按钮的点击事件监听器
          clipboard.on('success', function(e) {
            const icon = e.trigger.querySelector('i');
            icon.classList.remove('fa-copy');
            icon.classList.add('fa-check');
            // 1秒钟后将图标变回原来的图标
            setTimeout(function() {
              icon.classList.remove('fa-check');
              icon.classList.add('fa-copy');
            }, 1000);
          });
      });
  
      // 使用 hljs.highlightBlock() 方法对所有代码块进行语法高亮
      // const preCodeBlocks = document.querySelectorAll('pre code');
      // preCodeBlocks.forEach((block) => {
      //   hljs.highlightBlock(block);
      // });
      hljs.initHighlightingOnLoad();
    });
  })();
</script>
