.post-content {
  position: relative;
}

.hljs {
  font-family: "Courier New", sans-serif;
  font-size: 1em;
}

code {
  border: 0;
  color: #D83B64;
  display: inline;
  background-color: #f9f2f4;
  border-radius: 3px;
  position: relative;
  bottom: 1px;
}

.code-block {
  position: relative;
  margin-bottom: 1.5rem;
}

.code-block pre code.hljs {
  border-radius: 4px;
  padding-bottom: 10px;
  background: rgb(245, 245, 250);
  border-top-left-radius: 0;
  border-top-right-radius: 0;
  border-top: none;
}

.copy-btn {
  position: absolute;
  top: 48px;
  right: 10px;
  background: none;
  border: none;
  cursor: pointer;
  opacity: 0;
  transition: opacity 1s;
}

.copy-btn i {
  font-size: 1rem;
  color: #333;
}

.code-block:hover .copy-btn {
  opacity: 1;
}

pre {
  padding: 5px;
  white-space: pre;
  margin: 0;
  border: 0!important;
  word-break: break-all;
  word-wrap: break-word;
  counter-reset: itemcounter;
}

pre code.hljs {
  border-radius: 5px;
  box-shadow: 0 4px 11px -2px rgb(37 44 97 / 15%), 0 1px 3px 0 rgb(93 100 148 / 6%);
}

.language-label {
  display: inline-block;
  font-size: 0.8em;
  background-color: transparent;
  color: #999;
  padding: 2px 6px;
  border-radius: 3px;
  position: absolute;
  right: 0px;
  z-index: 1;
  opacity: 0;
  transition: opacity 0.3s;
}

.zy-knowledge {
  padding: 0;
  font-family: "Comic Sans MS", cursive, sans-serif;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 40px;
  line-height: 40px;
  background-color: #FAFAFA;
  border-radius: 5px 5px 0 0;
  box-shadow: 0 4px 11px -2px rgb(37 44 97 / 15%), 0 1px 3px 0 rgb(93 100 148 / 6%);
}

.zy-knowledge > .language-label {
  margin-left: 10px;
  opacity: 1;
}
