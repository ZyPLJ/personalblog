    background-color: #fff;
    padding: 0 20px;
    border-collapse: collapse;
    text-align: center;
}

.highlight::before {
    content: " ";
    position: absolute;
    border-radius: 50%;
    background: #fc625d;
    width: .75rem;
    height: .75rem;
    left: .95rem;
    top: 18px;
    box-shadow: 1.25rem 0 #fdbc40, 2.5rem 0 #35cd4b;
