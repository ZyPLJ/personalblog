<script>
    function calculateTimeDifference(startDate) {
        const now = new Date();
        const timeDifference = now - startDate;
        const days = Math.floor(timeDifference / (1000 * 60 * 60 * 24));
        const hours = now.getHours(); // 使用24小时制
        const minutes = Math.floor((timeDifference % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeDifference % (1000 * 60)) / 1000);

        return { days, hours, minutes, seconds };
    }
    function updateSiteRunningTime2() {
        const startDate2 = new Date("2016-11-23");

        // 计算运行时间
        const timeDifference2 = calculateTimeDifference(startDate2);

        // 更新显示网站运行时间的元素
        const runningTimeElement2 = document.getElementById("time");
        runningTimeElement2.textContent = `${timeDifference2.days}天 ${timeDifference2.hours}时 ${timeDifference2.minutes}分 ${timeDifference2.seconds}秒`;
    }


    // 立即更新网站运行时间
    updateSiteRunningTime2();

    // 每秒更新一次网站运行时间
    setInterval(updateSiteRunningTime2, 1000);
</script>