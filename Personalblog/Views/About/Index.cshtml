    .time-text {
        font-size: 14px;
        font-family: Arial, sans-serif;
    }
    .circle-container {
        position: relative;
        overflow: hidden;
    }

    .circle-bubble {
        position: absolute;
        bottom: 0;
        width: 8px;
        height: 8px;
        background-color: #FF69B4;
        border-radius: 50%;
        animation: bubble 5s linear infinite;
        opacity: 0;
    }

    @@keyframes bubble {
        0% {
            bottom: 0;
            opacity: 0;
        }
        5% {
            opacity: 0.5;
        }
        100% {
            bottom: 100%;
            opacity: 0;
        }
    }

    /* 随机位置和动画时长 */
    .circle-bubble:nth-child(1) {
        left: 20%;
        animation-duration: 3s;
    }

    .circle-bubble:nth-child(2) {
        left: 40%;
        animation-duration: 5s;
    }

    .circle-bubble:nth-child(3) {
        left: 60%;
        animation-duration: 6s;
    }

    .circle-bubble:nth-child(4) {
        left: 80%;
        animation-duration: 8s;
